module Musicality
module Parsing

grammar Note
  include Pitch
  include Articulation
  include Link
  include Duration

  rule note
    duration
    more:(
      first_pl:pitch_link
      more_pl:("," pl:pitch_link)*
      art:articulation?
      acc:accent?
    )?
    <NoteNode>
  end

  rule pitch_link
    pitch the_link:link?
  end
  
  rule accent
    "!"
  end
end

end
end